<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controller.MainController">

    <!-- Top Menu Bar -->
    <top>
        <MenuBar>
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Save Tasks" onAction="#onSaveTasks"/>
                        <MenuItem text="Load Tasks" onAction="#onLoadTasks"/>
                    </items>
                </Menu>

                <Menu text="Help">
                    <items>
                        <MenuItem text="About" onAction="#onAbout"/>
                    </items>
                </Menu>

                <Menu text="Exit">
                    <items>
                        <MenuItem text="Quit" onAction="#onExit"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- Center Table -->
    <center>
        <TableView fx:id="taskTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="titleColumn" text="Title" prefWidth="160" />
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120" />
                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="120" />
                <TableColumn fx:id="priorityColumn" text="Priority" prefWidth="80" />
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200" />
                <TableColumn fx:id="completedColumn" text="Done" prefWidth="80" />
            </columns>
        </TableView>
    </center>

    <!-- Bottom Controls -->
    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Input Row -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="titleField" promptText="Title" prefWidth="150" />
                <TextField fx:id="categoryField" promptText="Category" prefWidth="120" />
                <DatePicker fx:id="dueDatePicker" promptText="Due Date" />
                <ComboBox fx:id="priorityCombo" promptText="Priority" prefWidth="100" />
                <Button text="Add Task" onAction="#onAddTask" />
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <TextArea fx:id="descriptionArea" promptText="Description" prefWidth="450" prefHeight="60" />
            </HBox>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Delete Task" onAction="#onDeleteTask" />
                <Button text="Mark Completed" onAction="#onMarkCompleted" />
                <Button text="Edit Task" onAction="#onEditTask" />
                <Button text="Filter Uncompleted" onAction="#onFilterTasks" />
                <Button text="Clear Filter" onAction="#onClearFilter" />
            </HBox>

            <!-- Search -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Search keywords..." prefWidth="300"/>
                <Button text="Search" onAction="#onSearch"/>
            </HBox>

        </VBox>
    </bottom>

</BorderPane>
